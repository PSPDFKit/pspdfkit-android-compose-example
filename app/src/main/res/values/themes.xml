<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Compose" parent="Theme.MaterialComponents.DayNight.NoActionBar"/>

    <!-- Light Theme -->
    <style name="PSPDFCompose.Theme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="pspdf__tabIconColor">@color/black</item>
        <item name="pspdf__mainToolbarStyle">@style/PSPDFCompose.MainToolbarStyle.Light</item>
        <item name="pspdf__inlineSearchStyle">@style/PSPDFCompose.SearchViewInline.Light</item>
        <item name="pspdf__documentEditingToolbarIconsStyle">@style/PSPDFCompose.DocumentEditingToolbarIcons.Light</item>
        <item name="pspdf__actionBarIconsStyle">@style/PSPDFCompose.ActionBarIconsStyle.Light</item>
        <item name="pspdf__backgroundColor">@color/gray_10</item>
        <item name="pspdf__textColor">@color/black</item>
        <item name="pspdf__contextualToolbarStyle">@style/PSPDFCompose.ContextualToolbar.Light</item>
        <item name="pspdf__settingsDialogStyle">@style/PSPDFCompose.SettingsDialog.Light</item>
        <item name="pspdf__thumbnailBarStyle">@style/PSPDFCompose.ThumbnailBar.Light</item>
        <item name="pspdf__activityTitleOverlayColor">@color/black</item>
    </style>

    <style name="PSPDFCompose.MainToolbarStyle.Light" parent="@style/PSPDFKit.MainToolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="pspdf__textColor">@color/black</item>
        <item name="pspdf__backgroundColor">@color/white</item>
        <item name="pspdf__toolbarPopupTheme">@style/PSPDFCompose.ToolbarPopupTheme.Light</item>
    </style>
    <style name="PSPDFCompose.SearchViewInline.Light" parent="@style/PSPDFKit.SearchViewInline">
        <item name="pspdf__backgroundColor">@android:color/transparent</item>
        <item name="pspdf__borderColor">@color/black</item>
        <item name="pspdf__borderWidth">1dp</item>
        <item name="pspdf__inputFieldTextAppearance">@style/PSPDFCompose.SearchViewInline.InputFieldTextAppearance</item>
        <item name="pspdf__resultTextAppearance">@style/PSPDFCompose.SearchViewInline.ResultTextAppearance</item>
        <item name="pspdf__throbberColor">@color/black</item>
        <item name="pspdf__prevIconColorTint">@color/black</item>
        <item name="pspdf__nextIconColorTint">@color/black</item>
        <item name="pspdf__backIconColorTint">@color/black</item>
    </style>

    <style name="PSPDFCompose.SearchViewInline.InputFieldTextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_50</item>
    </style>

    <style name="PSPDFCompose.SearchViewInline.ResultTextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="PSPDFCompose.DocumentEditingToolbarIcons.Light" parent="@style/PSPDFKit.DocumentEditingToolbarIcons">
        <item name="android:colorPrimary">@color/black</item>
    </style>

    <style name="PSPDFCompose.ToolbarPopupTheme.Light" parent="@style/PSPDFKit.ToolbarPopupTheme">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PSPDFCompose.ActionBarIconsStyle.Light" parent="PSPDFKit.ActionBarIcons">
        <item name="pspdf__iconsColor">@color/black</item>
        <item name="pspdf__iconsColorActivated">@color/black</item>
    </style>

    <style name="PSPDFCompose.ContextualToolbar.Light" parent="PSPDFKit.ContextualToolbar">
        <item name="pspdf__backgroundColor">@color/white</item>
        <item name="pspdf__iconsColor">@color/black</item>
        <item name="pspdf__iconsColorActivated">@color/black</item>
    </style>

    <style name="PSPDFCompose.SettingsDialog.Light" parent="PSPDFKit.SettingsDialog">
        <item name="android:colorPrimary">@color/black</item>
        <item name="android:colorAccent">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="pspdf__settings_unselected_color">@color/offwhite</item>
    </style>

    <style name="PSPDFCompose.ThumbnailBar.Light" parent="PSPDFKit.ThumbnailBar">
        <item name="pspdf__thumbnailSelectedBorderColor">@color/black</item>
    </style>


    <!-- Dark Theme -->
    <style name="PSPDFCompose.Theme.Dark" parent="PSPDFKit.Theme.Dark">
        <item name="colorPrimary">@color/black</item>
        <item name="pspdf__tabIconColor">@color/white</item>
        <item name="pspdf__mainToolbarStyle">@style/PSPDFCompose.MainToolbarStyle.Dark</item>
        <item name="pspdf__actionBarIconsStyle">@style/PSPDFCompose.ActionBarIconsStyle.Dark</item>
        <item name="pspdf__backgroundColor">@color/gray_50</item>
        <item name="pspdf__textColor">@color/white</item>
        <item name="pspdf__contextualToolbarStyle">@style/PSPDFCompose.ContextualToolbar.Dark</item>
        <item name="pspdf__settingsDialogStyle">@style/PSPDFCompose.SettingsDialog.Dark</item>
        <item name="pspdf__thumbnailBarStyle">@style/PSPDFCompose.ThumbnailBar.Dark</item>
        <item name="pspdf__activityTitleOverlayColor">@color/black</item>
    </style>

    <style name="PSPDFCompose.MainToolbarStyle.Dark" parent="PSPDFKit.MainToolbar.Dark">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="pspdf__backgroundColor">@color/black</item>
        <item name="pspdf__textColor">@color/white</item>
        <item name="pspdf__toolbarPopupTheme">@style/PSPDFCompose.ToolbarPopupTheme.Dark</item>
    </style>

    <style name="PSPDFCompose.ToolbarPopupTheme.Dark" parent="@style/PSPDFKit.ToolbarPopupTheme">
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="PSPDFCompose.ActionBarIconsStyle.Dark" parent="PSPDFKit.ActionBarIcons.Dark">
        <item name="pspdf__iconsColor">@color/white</item>
        <item name="pspdf__iconsColorActivated">@color/white</item>
    </style>

    <style name="PSPDFCompose.ContextualToolbar.Dark" parent="PSPDFKit.ContextualToolbar.Dark">
        <item name="pspdf__backgroundColor">@color/black</item>
        <item name="pspdf__submenuBackgroundColor">@color/black</item>
        <item name="pspdf__iconsColor">@color/white</item>
        <item name="pspdf__iconsColorActivated">@color/white</item>
    </style>

    <style name="PSPDFCompose.SettingsDialog.Dark" parent="PSPDFKit.SettingsDialog.Dark">
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/offwhite</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="pspdf__settings_unselected_color">@color/offwhite</item>
    </style>

    <style name="PSPDFCompose.ThumbnailBar.Dark" parent="PSPDFKit.ThumbnailBar.Dark">
        <item name="pspdf__thumbnailSelectedBorderColor">@color/white</item>
    </style>
</resources>
